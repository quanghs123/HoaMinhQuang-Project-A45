<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:orientation="vertical"
    android:id="@+id/lyTruyenTranh">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/imgTruyenTranh"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_manga_1" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:background="#A8000000"
            >
            <TextView
                android:id="@+id/tvTenTruyen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đào Hoa Bảo Điển"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="10sp"
                android:textColor="#fff"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tvTenChap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:text="Chapter 452"
                android:textColor="#fff"
                android:textSize="10sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp">
                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:src="@drawable/ic_baseline_access_time_24"
                    />
                />
                <TextView
                    android:id="@+id/tvCapNhat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 ngày trước"
                    android:textColor="#fff"
                    android:textSize="10sp"
                    />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>